{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/0.2.0/:rest*",
        "destination": "/latest/:rest*",
        "type": 302
      },
      {
        "source": "/latest/:rest*",
        "destination": "/0.3.0/:rest*",
        "type": 302
      }
    ],
    "headers": [
      {
        "source": "**/*.@(css|js|)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "cleanUrls": true
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "name": "functions",
      "host": "localhost",
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "_storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    }
  },
  "__storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}